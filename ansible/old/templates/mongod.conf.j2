# Where and how to store data.
storage:
    dbPath: /var/lib/mongodb
    journal:
        enabled: true

# Where to write loggin data
systemLog:
    destination: file
    logAppend: true
    path: /var/log/mongodb/mongod.log

# Network interfaces
net:
    # defaut - the filter Jinja2, sets the default value
    port: {{ mongo_port | default('27017') }}
    bindIp: {{ mongo_bind_ip }}